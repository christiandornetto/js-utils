{
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "ESNext"],
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist",
    "removeComments": false,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true
  },
  "files": ["./src/index.ts"],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
